
@using AuthServer.ViewModels.Auth
@using Microsoft.AspNetCore.Components.Forms
@model LoginRegisterInput

@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <title>Login</title>
    <link href="~/css/LoginPage.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" /> 
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        @@media (min-width: 768px) {
            .row-flex {
                display: flex;
            }
        }
    </style>
</head>
<body>
    <video class="video-background" autoplay muted loop>
        <source src="~/videoplayback.mp4" type="video/mp4">
    </video>
    <div class="container_loginbox">
        <div class="row-flex">
            <div id="login_box" class="content_loginbox">
                <form id="login_form" method="post" asp-controller="Account" asp-action="Login">
                    <div class="text-center mb-4">
                        <h1 style="color:white;">LOGIN</h1>
                    </div>

                    @if (Model.IsLogin)
                    {
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    }

                    <div class="mb-3">
                        <input id="inputTextBoxUsername" class="form-control textbox" placeholder="Username" asp-for="LoginInput.Email" />
                        <span asp-validation-for="LoginInput.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input id="inputTextBoxPassword" class="form-control textbox" placeholder="Password" type="password" asp-for="LoginInput.Password" />
                        <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3 _formCheck">
                        <input class="form-check-input textbox" type="checkbox" asp-for="LoginInput.RememberMe" />
                        <label class="form-check-label" for="LoginInput_RememberMe">Remember me</label>
                    </div>
                    <div class="mb-3">
                        <button id="loginButton" type="submit" class="textbox submitButton w-100">LOGIN</button>
                    </div>
                </form>

                <form style="display: inline" action="GoogleLogin" method="get">
                    <div class="text-center mb-3">
                        <button class="gsi-material-button form-control textbox">
                            <div class="gsi-material-button-state"></div>
                            <div class="gsi-material-button-content-wrapper">
                                <div class="gsi-material-button-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" style="display: block;">
                                        <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
                                        <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
                                        <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
                                        <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
                                        <path fill="none" d="M0 0h48v48H0z"></path>
                                    </svg>
                                </div>
                                <span class="gsi-material-button-contents">Sign in with Google</span>
                                <span style="display: none;">Sign in with Google</span>
                            </div>
                        </button>
                    </div>
                </form>
            </div>

            <div id="registration_box" class="content_loginbox ms-3">
                <form id="registration_form" method="post" asp-controller="Account" asp-action="Register">
                    <div class="text-center mb-4">
                        <h1 style="color:white;">REGISTRATION</h1>
                    </div>

                    @if (!Model.IsLogin)
                    {
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    }

                    <div class="mb-3">
                        <input asp-for="RegisterInput.Email" class="form-control textbox" autocomplete="username" placeholder="Email" />
                        <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="RegisterInput.Password" class="form-control textbox" autocomplete="new-password" placeholder="Password" />
                        <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="RegisterInput.ConfirmPassword" class="form-control textbox" autocomplete="new-password" placeholder="Confirm password" />
                        <span asp-validation-for="RegisterInput.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input id="inputTextBoxInvitecode" class="form-control textbox" placeholder="Invitation code" asp-for="RegisterInput.InviteCode" />
                    </div>
                    <div class="mb-3">
                        <button id="RegisterButton" type="submit" class="submitButton textbox w-100">REGISTER</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <label id="footerLabel" class="text-muted position-absolute" style="bottom: 10px; left: 10px; display: none;">Developed by Igor Markiv.</label>
</body>
</html>
